{
  "extends": "airbnb",

  "env": {
    "jest": "true"
  },

  "rules": {
    "semi": ["error", "never"],
    "no-param-reassign": ["off"],
    "no-cond-assign": ["error", "except-parens"],
    "no-plusplus": ["off"],
    "comma-dangle": ["error", {
      "arrays": "only-multiline",
      "objects": "only-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "never",
    }],
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
  }
}
